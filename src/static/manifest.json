{
    "manifest_version": 3,
    "name": "Multi Viewer",
    "description": "View multiple video streaming in single view",
    "version": "1.0",
    "action": {
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "tabs",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "*://live.nicovideo.jp/*",
        "*://www.youtube.com/*",
        "*://www.twitch.tv/*"
    ],
    "content_scripts": [
        {
            "matches": ["*://live.nicovideo.jp/watch/*"],
            "all_frames": true,
            "js": ["contentScriptForNicoLive.js"]
        },
        {
            "matches": ["*://www.youtube.com/watch?*"],
            "all_frames": true,
            "js": ["contentScriptForYoutube.js"]
        },
        {
            "matches": ["*://www.twitch.tv/*"],
            "all_frames": true,
            "js": ["contentScriptForTwitch.js"]
        }
    ]
}